<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: #87CEFA;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ipz.FXMLDocumentController">
   <bottom>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <Button onAction="#logowanie" text="Zaloguj" AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="5.0" />
         </children>
      </AnchorPane>
   </bottom>
   <center>
      <GridPane maxHeight="50.0" maxWidth="300.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="login" style="-fx-border-color: black;" GridPane.columnIndex="1" />
            <PasswordField fx:id="haslo" onAction="#logowanie" style="-fx-border-color: black;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Login">
               <font>
                  <Font size="15.0" />
               </font></Label>
            <Label text="Hasło" GridPane.rowIndex="1">
               <font>
                  <Font size="15.0" />
               </font></Label>
         </children>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </GridPane>
   </center>
   <top>
      <Label text="Proszę podać login i hasło" BorderPane.alignment="CENTER">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
   </top>
</BorderPane>
